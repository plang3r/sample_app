<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<%= ajax_will_paginate @microposts %>
			<ol class="microposts apaginate_container">
				<%= render @microposts %>
			</ol>
			<%= ajax_will_paginate @microposts %>
		<% end %>	
	</div>
</div>
<%= javascript_include_tag "user_paginate.js" %>
